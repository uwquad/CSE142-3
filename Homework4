import java.util.*;

//This creates an interactive program to calculate which applicant seems better based on SAT/ACT scores and GPA.
public class Admit {
   public static void main(String[] args) {
      Scanner keyboardinput = new Scanner(System.in);

      prompting();
      int math = 0;
      int reading = 0;
      int english = 0;
      int writing = 0;
      int science = 0;
      int satExamScore = 0;
      double actExamScore = 0;
      double overallGpa = 0;
      double maxGpa = 0;
      double transcriptMultiplier = 0;
      double gpaScore = 0;
                  
      int typeOfTest = getTestType(keyboardinput);
      if (typeOfTest == 1) {
         math = satMathScore(keyboardinput);            
         reading = satReadingScore(keyboardinput);            
         writing = satWritingScore(keyboardinput);
         satExamScore = satCalculation(keyboardinput, math, reading, writing);
      } if (typeOfTest == 2) {
         english = actEnglishScore(keyboardinput);    
         math = actMathScore(keyboardinput);
         reading = actReadingScore(keyboardinput);     
         science = actScienceScore(keyboardinput);
         actExamScore = actCalculation(keyboardinput, english, math, reading, science);
      }  
         overallGpa = overallGpa(keyboardinput);
         maxGpa = maxGpa(keyboardinput);
         transcriptMultiplier = transcriptMultiplier(keyboardinput);
         //gpaScore = another method for the calculation,pass in actual gpa, max gpa, and multiplier         
         //do the printing in main through concatenation
         //do another if statement at the end to see which person's overall score is bigger 
         
      } 
   
   public static void prompting() {
      System.out.println("This program compares two applicants to determine which one seems like the stronger" +
                         " applicant.\nFor each candidate I will need either SAT or ACT scores plus a weighted GPA.\n");
      System.out.println("Information for applicant #1:");
   }
   
   public static int getTestType(Scanner keyboardinput) {
      System.out.println("Do you have 1) SAT scores or 2) ACT scores?");
      int typeOfTest = keyboardinput.nextInt();
      return typeOfTest;   
   }
   
   //public static void decideIfSatOrAct(Scanner keyboardinput, int typeOfTest) {
        
   public static int satCalculation(Scanner keyboardinput, int SatMath, int SatReading, int SatWriting) {
      int satExamScore = (((2*SatMath) + SatReading + SatWriting)/32);
      System.out.println(satExamScore); 
      return satExamScore;
   } 
   
   public static int satMathScore(Scanner keyboardinput) {
      System.out.println("SAT math score?");
      int SatMath = keyboardinput.nextInt();
      return SatMath;
   }
   
   public static int satReadingScore(Scanner keyboardinput) {
      System.out.println("SAT critical reading score?");
      int SatReading = keyboardinput.nextInt();
      return SatReading;
   }
   public static int satWritingScore(Scanner keyboardinput) {
      System.out.println("SAT writing score?");
      int SatWriting = keyboardinput.nextInt();
      return SatWriting;
   }
   public static double actCalculation(Scanner keyboardinput, int ActEnglish, 
                                     int ActMath, int ActReading, int ActScience) {
      double actExamScore = ((ActEnglish + (2 * ActMath) + ActReading + ActScience)/1.8);
      System.out.println(actExamScore); 
      return actExamScore;      
   }
   public static int actEnglishScore(Scanner keyboardinput) {
      System.out.println("ACT english score?");
      int ActEnglish = keyboardinput.nextInt();
      return ActEnglish;
   }
   public static int actMathScore(Scanner keyboardinput) {
      System.out.println("ACT math score?");
      int ActMath = keyboardinput.nextInt();
      return ActMath;
   }
   public static int actReadingScore(Scanner keyboardinput) {
      System.out.println("ACT reading score?");
      int ActReading = keyboardinput.nextInt();
      return ActReading;
   }
   public static int actScienceScore(Scanner keyboardinput) {
      System.out.println("ACT science score?");
      int ActScience = keyboardinput.nextInt();
      return ActScience;
   }
   public static double overallGpa(Scanner keyboardinput) {
      System.out.println("Overall GPA?");
      double overallGpa = keyboardinput.nextDouble();
      return overallGpa;
   }  
    public static double maxGpa(Scanner keyboardinput) {
      System.out.println("Max GPA?");
      double maxGpa = keyboardinput.nextDouble();
      return maxGpa;
   }  
    public static double transcriptMultiplier(Scanner keyboardinput) {
      System.out.println("Transcript multiplier?");
      double transcriptMultiplier = keyboardinput.nextDouble();
      return transcriptMultiplier;
   }  


   
   //make sure to define the variable OverallGpa in the main method
   //make a method for max gpa too
   
}
